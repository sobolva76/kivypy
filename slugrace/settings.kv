### File name: settings.kv

<RegularLabel@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'center'

<Regular80x30Label@RegularLabel>:
    size_hint: None, None
    width: 80
    height: 30

<DollarLabel@Regular80x30Label>:
    text: "$"
    width: 20

<TitleLabel@RegularLabel>:
    font_size: 20
    size_hint: (1, None)
    height: 30

<NameInput@TextInput>:
    multiline: False
    size_hint: None, None
    height: 30
    width: 400

<NumInput@TextInput>:
    multiline: False
    size_hint: None, None
    height: 30
    width: 250

<PlayerRadioButton@CheckBox>:
    group: 'players'
    size_hint: (.5, 1)

<ConditionRadioButton@CheckBox>
    group: 'conditions'
    size_hint_x: .05

<SettingsScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ### Настройки ###
    TitleLabel:
        text: "Настройки"
        font_size: 28

    ### Игрок ###
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        TitleLabel:
            text: "Колличество игроков"
            font_size: 20

        BoxLayout:
            size_hint: .4, None
            height: 50

            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text: "1 Игрок"

            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text: "2 Игрока"

            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text: "3 Игрока"

            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text: "4 Игрока"

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                RegularLabel:
                    text: ""
                    size_hint_x: None
                    width: dp(80)
                
                RegularLabel:
                    text: "Имя"
                    size_hint_x: None
                    width: dp(700)
                    
                RegularLabel: 
                    text: "Начальный капитал"
                    
            # Первый игрок
            BoxLayout:
                Regular80x30Label:
                    text: "Игрок № 1"

                NameInput:

                BoxLayout:
                    RegularLabel:
                        text: ""
                        size_hint_x: None
                        width: dp(280)

                    DollarLabel:
                        
                    NumInput:
                        
            # Второй игрок
            BoxLayout:
                Regular80x30Label:
                    text: "Игрок № 2"
                    
                NameInput:

                BoxLayout:
                    RegularLabel:
                        text: ""
                        size_hint_x: None
                        width: dp(280)
                        
                    DollarLabel:
                        
                    NumInput:
                        
            # Третий игрок
            BoxLayout:
                Regular80x30Label:
                    text: "Игрок № 3"
                    
                NameInput:

                BoxLayout:
                    RegularLabel:
                        text: ""
                        size_hint_x: None
                        width: dp(280)
                        
                    DollarLabel:
                        
                    NumInput:
                        
            # Четвертый игрок
            BoxLayout:
                Regular80x30Label:
                    text: "Игрок № 4"
                    
                NameInput:

                BoxLayout:
                    RegularLabel:
                        text: ""
                        size_hint_x: None
                        width: dp(280)
                        
                    DollarLabel:
                        
                    NumInput:               

    ### Условия окончания игры ###
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, .4
        padding: 10
        spacing: 10

        TitleLabel:
            text: "Условия окончания игры"

        GridLayout:
            rows: 3

            ConditionRadioButton:
            RegularLabel:
                text: "Игра заканчивается, когда деньги остаются у одного игрока"

            ConditionRadioButton:
            BoxLayout:
                RegularLabel:
                    text: "Игра длиться указанное колличество гонок"              
                NumInput:

            ConditionRadioButton:
            BoxLayout:
                RegularLabel:
                    text: "Игра длиться указанное время"                   
                NumInput:
            
    ### Готово (принять) ###
    Button:
        text: "Готово"
        size_hint: None, None
        size: 200, 40
        pos_hint: {'center_x': 0.5}