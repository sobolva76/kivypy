# File name slug.kv
#:import slug slug

<Slug>:
    pos_hint: {'x': 0.9, 'center_y': root.y_position}
    size_hint: (None, None)
    size: 143, 30

    # body image
    Image:
        source: 'assets/slugs/' + root.body_image + '.png' if root.body_image else None
    # left eye image
    Image:
        canvas.before:
            PushMatrix
            Rotate:
                angle: 30
                axis: 0, 0, 1
                origin: self.x, self.center_y
        canvas.after:
            PopMatrix
        source: 'assets/slugs/' + root.eye_image + '.png' if root.eye_image else None
        pos_hint: {'x': .95, 'y': .45}
        size_hint: 0.25, 0.25
    # right eye image
    Image:
        canvas.before:
            PushMatrix
            Rotate:
                angle: -30
                axis: 0, 0, 1
                origin: self.x, self.center_y
        canvas.after:
            PopMatrix
        source: 'assets/slugs/' + root.eye_image + '.png' if root.eye_image else None
        pos_hint: {'x': .95, 'y': .3}
        size_hint: 0.25, 0.25