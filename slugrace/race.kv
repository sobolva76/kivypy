# File name: race.kv

<RegularLabel@Label>:
    color: .2, .1, 0, 1
    text_size: self.size
    halign: 'left'
    valign: 'center'

<BoldLabel@RegularLabel>:
    bold: True

<WhiteOddsLabel@BoldLabel>:
    font_size: 32
    color: 1, 1, 1, 1

<WhiteNameLabel@BoldLabel>:
    font_size: 18
    color: 1, 1, 1, 1

<WhiteWinsLabel@BoldLabel>
    font_size: 14
    color: 1, 1, 1, 1

<RedButton@Button>:
    background_color: .8, 0, 0, 1
    color: 1, .8, .1, 1
    bold: True
    font_size: 18
    size_hint: (.9, .3)
    #size: 200, 40
    pos_hint: {'center_x': .5}

<SlugsStats>:
    spacing: 10
    RegularLabel:
        text: root.name
    RegularLabel:
        text: str(root.wins) + (' win' if root.wins == 1 else ' wins')
    RegularLabel:
        text: str(root.win_percent) + '%'

<PlayerStats>:
    RegularLabel:
        text: root.name
    RegularLabel:
        text: 'has $' + str(root.money)

<SlugsInfo>:
    orientation: 'vertical'
    size_hint: (None, None)
    size: 100, 50
    pos_hint: {'x': .004, 'center_y': root.y_position}

    WhiteNameLabel:
        text: root.name

    WhiteWinsLabel: 
        text: str(root.wins) + (' win' if root.wins == 1 else ' wins')

<SlugImage>:
    pos_hint: {'x': 0.9, 'center_y': root.y_position}
    size_hint: (None, None)
    size: 143, 30

    # body image
    Image:
        source: 'assets/slugs/' + root.body_image + '.png'
    # left eye image
    Image:
        canvas.before:
            PushMatrix
            Rotate:
                angle: 30
                axis: 0, 0, 1
                origin: self.x, self.center_y
        canvas.after:
            PopMatrix
        source: 'assets/slugs/' + root.eye_image + '.png'
        pos_hint: {'x': .95, 'y': .45}
        size_hint: 0.25, 0.25
    # right eye image
    Image:
        canvas.before:
            PushMatrix
            Rotate:
                angle: -30
                axis: 0, 0, 1
                origin: self.x, self.center_y
        canvas.after
            PopMatrix
        source: 'assets/slugs/' + root.eye_image + '.png'
        pos_hint: {'x': .95, 'y': .3}
        size_hint: 0.25, 0.25

