# File name: race.kv
#:import race race

<RaceScreenManager>
    BetsScreen:
        name: 'betsscreen'
    ResultsScreen:
        name: 'resultsscreen'

<SlugsStats>:
    spacing: 10
    RegularLabel:
        text: root.name
    RegularLabel:
        text: str(root.wins) + (' win' if root.wins == 1 else ' wins')
    RegularLabel:
        text: str(root.win_percent) + '%'

<PlayerStats>:
    RegularLabel:
        text: root.name
    RegularLabel:
        text: 'has $' + str(root.money)

<SlugsInfo>:
    orientation: 'vertical'
    size_hint: (None, None)
    size: 100, 50
    pos_hint: {'x': .004, 'center_y': root.y_position}

    WhiteNameLabel:
        text: root.name

    WhiteWinsLabel: 
        text: str(root.wins) + (' win' if root.wins == 1 else ' wins')

 ### Основные блоки разметки ###
<RaceScreen>:
    canvas:
        Color:
            rgba: 1, 1, .8, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        ### info, Stats and Buttons ###
        GridLayout:
            cols: 4
            size_hint: 1, .5
            spacing: 10

            ### Блок - онформация об игре ###
            BoxLayout:
                canvas:
                    Color:
                        rgba: .2, .1, 0, 1
                    Line:
                        rounded_rectangle: self.x, self.y, self.width, self.height, 10
                        width: 2
                orientation: 'vertical'
                padding: 10

                BoldLabel:
                    text: "Игра"
                BoxLayout:
                    RegularLabel:
                        text: "Race No"
                        size_hint: (2.5, 1)
                    RegularLabel:
                        text: "1"
                BoxLayout:
                    RegularLabel:
                        text: "Number of races set:"
                        size_hint: (2.5, 1)
                    RegularLabel:
                        text: "10"
                BoxLayout:
                    RegularLabel:
                        text: "Races finished"
                        size_hint: (2.5, 1)
                    RegularLabel:
                        text: "0"
                BoxLayout:
                    RegularLabel:
                        text: "Races to go:"
                        size_hint: (2.5, 1)
                    RegularLabel:
                        text: "10"

            ### Slugs stats ###
            BoxLayout:
                canvas:
                    Color:
                        rgba: .2, .1, 0, 1
                    Line:
                        rounded_rectangle: self.x, self.y, self.width, self.height, 10
                        width: 2
                orientation: 'vertical'
                padding: 10

                BoldLabel:
                    text: "Slugs stats"

                SlugsStats:
                    name: "Speedster"
                    wins: 7
                    win_percent: 10

                SlugsStats:
                    name: "Trusty"
                    wins: 1
                    win_percent: 10

                SlugsStats:
                    name: "Iffy"
                    wins: 0
                    win_percent: 0

                SlugsStats:
                    name: "Slowpoke"
                    wins: 2
                    win_percent: 20

            ### Players stats ###
            BoxLayout:
                canvas:
                    Color:
                        rgba: .2, .1, 0, 1
                    Line:
                        rounded_rectangle: self.x, self.y, self.width, self.height, 10
                        width: 2
                orientation: 'vertical'
                padding: 10

                BoldLabel:
                    text: "Players stats"

                PlayerStats
                    name: "Player 1"
                    money: 1000

                PlayerStats
                    name: "Player 2"
                    money: 800

                PlayerStats
                    name: "Player 3"
                    money: 1300

                PlayerStats
                    name: "Player 4"
                    money: 1200

            ### Buttons ###
            BoxLayout:
                orientation: 'vertical'
                spacing: 3
                padding: 10
                size_hint: .7, .7

                RedButton:
                    text: "End Game"
                    on_press: root.manager.current = 'gameoverscreen'

                RedButton:
                    text: "Instructions"

                RedButton:
                    text: "Sound"
        
        ### The track ###
        BoxLayout:
            canvas:
                Color:
                    rgba: .2, .1, 0, 1
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, 10
                    width: 2
            padding: 10

            RelativeLayout:
                size_hint: (None, None)
                size: 1000, 200
                pos_hint: {'center_y': .5}
                
                Image:
                    source: 'assets/racetrack.png'

                SlugsInfo:
                    y_position: .875
                    name: "Speedster"
                    wins: 7


                    Slug:
                        body_image: 'speedster'
                        eye_image: 'speedsterEye'
                        y_position: .875
                        
                SlugsInfo:
                    y_position: .625
                    name: "Trusty"
                    wins: 1

                    Slug:
                        body_image: 'trusty'
                        eye_image: 'trustyEye'
                        y_position: .625
                        
                SlugsInfo:
                    y_position: .375
                    name: "Iffy"
                    wins: 0

                    Slug:
                        body_image: 'iffy'
                        eye_image: 'iffyEye'
                        y_position: .375
                        
                SlugsInfo:
                    y_position: .125
                    name: "Slowpoke"
                    wins: 2

                    Slug:
                        body_image: 'slowpoke'
                        eye_image: 'slowpokeEye'
                        y_position: .125
                        
                # the odds labels
                WhiteOddsLabel:
                    text: '1.42'                
                    pos_hint: {'x': .77, 'center_y': .875}

                WhiteOddsLabel:
                    text: '1.61'                
                    pos_hint: {'x': .77, 'center_y': .625}

                WhiteOddsLabel:
                    text: '2.53'                
                    pos_hint: {'x': .77, 'center_y': .375}

                WhiteOddsLabel:
                    text: '2.89'                
                    pos_hint: {'x': .77, 'center_y': .125} 

            BoxLayout:
                orientation: 'vertical'
                size_hint: (.18, 1)

                Label:
                    color: .2, .1, 0, 1
                    text: "The winner is"
                    font_size: 24
                    size_hint: 1, .2
                    bold: True

                Label:
                    color: .2, .1, 0, 1
                    text: "Trusty"
                    font_size: 32
                    size_hint: 1, .2
                    bold: True

                Image:
                    source: 'atlas://assets/silhouettes/silhouettes/Trusty'

        ### The best ###
        BoxLayout:
            canvas:
                Color:
                    rgba: .2, .1, 0, 1
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, 10
                    width: 2
            color: .2, .1, 0, 1
            padding: 5
            RaceScreenManager:
    