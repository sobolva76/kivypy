# File name: gameover.kv
#:import gameover gameover

<GameoverScreen>:
    canvas:
        Color:
            rgba: 1, 1, .8, 1
        Rectangle:
            pos: self.pos
            size: self.size

    game: root.manager
    
    BoxLayout:
        orientation: 'vertical'

        BoldLabel:
            text: "Game Over"
            font_size: 100
            halign: 'center'

        BoldLabel:
            text: "There's only one player with any money left."
            font_size: 40
            halign: 'center'

        BoldLabel:
            text: "The winner is Player 2, having started at $1000, winning at $999"
            font_size: 30
            halign: 'center'

        ### Buttons
        BoxLayout:
            spacing: 50
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (None, None)
            size: 450, 200

            RedButton:
                text: "Play Again"
                pos_hint: {'x': 0, 'center_y': .5}
                on_press: root.manager.current = 'settingsscreen'

            RedButton:
                text: "Quit"
                pos_hint: {'right': 1, 'center_y': .5}