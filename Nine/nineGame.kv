# File name: nineGame.kv

# визуализация игрока
<Player>:
    size: 14, 14
    canvas:
        Color:
            rgba: 1, 0, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size 
# создаем видимый образ аппонента
<Apponent>:
    size: 12, 12
    canvas:
        Color:
            rgba: 0, 1, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size 

# визуальное представление блоков
<Blok>:   
    size: 10, 10
    canvas:
        Color:
            rgba: 0, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
# визуализация блока удаления аппонентов (необходимо сделать прозрачным)
<Blok_stop>:
    size: 1, 1
    canvas:
        Color:
            rgba: 0, 0.3, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
# визуальное представление блока конца горизонта
<Blok_end>:
    size: 1, 1
    canvas:
        Color:
            rgba: 0, 0.3, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Blok_base>:
    size: 10, 10
    canvas:
        Color:
            rgba: 0, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Move_button>:
    size: 100, 30

# главный виджет приложения
<NineGameBase>:

# id постоянных блоков (левого, правого, и пола)
    blok_right: _blok_right
    blok_left: _blok_left
    blok_down: _blok_down
    blok_stop: _blok_stop

# id персонажа и кнопок движения
    player: _player
    btn_right: _btn_right
    btn_left: _btn_left
    btn_up: _btn_up

# правая стена  
    Blok:
        id: _blok_right
        pos: root.width - 10, 0
        size: 10, root.height
# левыя стена
    Blok:
        id: _blok_left
        pos: 0, 0
        size: 10, root.height
# два блока нижняя кайма, первый пол, второй каяма
    Blok:
        id: _blok_down
        pos: 0, 100
        size: root.width, 10
    Blok:
        pos: 0, 0
        size: root.width, 10
# верх
    Blok:
        pos: 10, root.height - 10
        size: root.width, 10
# блок - стоп для аппонента
    Blok_stop:
        id: _blok_stop
        pos: 50, 115

    Player:
        id: _player
        pos: 100, 500

    Move_button:
        id: _btn_right
        text: "move -> "
        pos: 10, 10

    Move_button:
        id: _btn_left
        text: "<- move"
        pos: 200, 10

    Move_button:
        id: _btn_up
        text: "^"
        pos: 500, 10