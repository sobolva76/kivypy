# визуальное представление постоянных блоков(стен, пола, потолка)
<Blok>:   
    size: 10, 10
    canvas:
        Color:
            rgba: 0, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<GameStartScreen>:
    name: 'screen_gamestart'

    FloatLayout:
        # id постоянных блоков (левого, правого, пола)
        blok_right: _blok_right
        blok_left: _blok_left
        blok_down: _blok_down

        # правая стена  
        Blok:
            id: _blok_right
            size_hint: None, None
            pos: root.width - 10, 100
            size: 10, root.height
        # левыя стена
        Blok:
            id: _blok_left
            size_hint: None, None
            pos: 0, 100
            size: 10, root.height
        # нижняя кайма
        Blok:
            id: _blok_down
            size_hint: None, None
            pos: 0, 100
            size: root.width, 10
        # верх
        Blok:
            size_hint: None, None
            pos: 10, root.height - 10
            size: root.width, 10

        BoxLayout:
            size_hint_y: .15
            orientation: 'vertical'

            Button:
                text: 'Переход к gameend'
                on_release: root.manager.current = 'screen_gameend'